{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: gcc 활성 파일 빌드",
			"command": "/usr/bin/gcc",
			"args": [
				"-g",
				"${file}",
				"-Wall",
				"-Wextra",
				"-Werror",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.out",
				"&&",
				"${fileDirname}/${fileBasenameNoExtension}.out"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		}
	]
}